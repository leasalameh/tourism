<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- Top Container with Back Arrow, Title, Location, and Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_arrow"
                android:contentDescription="Back Arrow"
                android:layout_marginEnd="8dp" />

            <!-- Title and Location in Center -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Joe &amp; the Juice"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/place_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Downtown"
                    android:textColor="#666"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Icons: Heart, Check, Save -->
            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart_icon"
                android:contentDescription="Heart Icon"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/check_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/check_icon"
                android:contentDescription="Check Icon"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/save_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/save_icon"
                android:contentDescription="Save Icon"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Image Header -->
        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/joeandthejuice"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joe &amp; The Juice in Lebanon is a vibrant cafÃ© offering fresh, nutritious juices, smoothies, and salads, along with specialty coffee."
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Tags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salads"
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="@drawable/tag_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healthy"
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="@drawable/tag_background" />
        </LinearLayout>

        <!-- Ratings and Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$$"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"
                android:textSize="18sp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/custom_yellow"
                android:progressBackgroundTint="@android:color/transparent"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- Opening Hours -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/opening_hours_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock_icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/opening_hours_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Hours:"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Map Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text=". Monday: 08:00am - 12:00am\n.Tuesday: 08:00am - 12:00am\n.Wednesday: 08:00am - 12:00am\n.Thursday: 08:00am - 12:00am\n.Friday: 08:00am - 12:00am\n.Saturday: 08:00am - 12:00am\n.Sunday: 08:00am - 12:00am"
            android:textColor="#696969"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WG22+4FM, Beirut, Lebanon"
                    android:textColor="@color/black"
                    android:paddingBottom="2dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/map_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/map_image"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/contact_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:paddingTop="4dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/insta"
                    android:layout_marginEnd="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joeandthejuicelebanon"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp" >

            <!-- Horizontal Line -->
            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_alignParentTop="true" />


            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/sticky_navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/horizontal_line"
                android:background="@android:color/transparent"
                android:paddingTop="2dp" >

                <Button
                    android:id="@+id/btn_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book"
                    android:textColor="#000000"
                    android:background="@drawable/button_border"
                    android:layout_margin="9dp"
                    android:padding="5dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Menu"
                    android:textColor="#000000"
                    android:background="@drawable/button_border"
                    android:layout_margin="18dp"
                    android:padding="5dp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
