<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- Black border on pressed -->
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_focused="true"> <!-- Optional: focused state -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- Black border on focused -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- Black border in default state -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>
